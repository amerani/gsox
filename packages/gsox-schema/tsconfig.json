{
      "compilerOptions": {
          "module": "commonjs",
          "target": "es5",
          "moduleResolution": "node",
          "outDir": "./lib",
          "lib": [
            "es6",
            "esnext",
            "dom"
          ],
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true,
          "jsx": "react"
      },
      "include": [
          "src/**/*"
      ],
      "types": ["node", "reflect-metadata"]
}
